
<div class="container">
  <h1 class="title">New Game</h1>
  <div class="grid d-inline-flex justify-content-around">
    <% @grid.each do |letter| %>
    <h2 class="letters"><%= letter %></h2>
    <% end %>
  </div>

  <form action="/score" method="post" id="inputform">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label>What is the longest word you can find?</label>
    <div>
      <input type="text" name="word">
      <input type="text" name="grid" value="<%= @grid.join %>" hidden>
      <input type="submit" value="Play">
    </div>
  </form>
</div>
